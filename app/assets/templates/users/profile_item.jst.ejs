<div class="group">
  <h3><%= OkClone.Models.Profile.displayText(attr) %></h3>
  <button class="edit activates-edit">edit</button>
</div>
<p class="on-inactive"><%= profile.get(attr) %></p>

<form class="on-activated" id="<%= attr %>">
  <textarea name="<%= attr %>"><%= profile.escape(attr) %></textarea>
  <button class="submit">Save</button>
  <button class="cancel activates-edit">Cancel</button>
</form>
