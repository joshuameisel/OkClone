<section class="top" id="profile-head">
  <ul>
    <li class="username"><%= @user.username %></li>
    <li class="user-info">
      <%= @user.age %>/<%= @user.gender %>/<%= @user.orientation %>
    </li>
		<li class="user-info"><%= @user.zip_code %></li>
  </ul>
</section>

<section class="right" id="details">
	<table>
		<thead>
			<tr>
				<th colspan="2">My Details</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>Orientation</td>
				<td><%= @user.orientation %></td>
			</tr>
			<tr>
				<td>Religion</td>
				<td><%= @profile.religion %></td>
			</tr>
		</tbody>
	</ul>
</section>

<section class="left" id="profile">
	<h3>My self-summary</h3>
	<p><%= @profile.summary %></p>
	<h3>Favorite books, movies, shows, music, and food</h3>
	<p><%= @profile.likes %></p>
	<h3>The most private thing Iâ€™m willing to admit</h3>
	<p><%= @profile.most_private %></p>
</section>